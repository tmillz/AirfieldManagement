<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        @drawable/ic_arrow_back_black_24dp
        @drawable/ic_menu_black_24dp
        @drawable/ic_library_books_black_24dp
        @drawable/ic_md_jet_black_24dp
        @drawable/ic_warning_black_24dp
        @drawable/ic_link_black_24dp
        @drawable/ic_map_black_24dp
        @drawable/ic_star_black_24dp
        @drawable/ic_email_black_24dp
        @drawable/ic_action_important
        @drawable/ic_action_map
        @drawable/ic_action_search
        @drawable/ic_action_warning
        @drawable/ic_save_black_24dp
        @drawable/ic_delete_forever_black_24dp
        @drawable/ic_calculator
        @color/highlight_light

    </style>
    
    <style name="AppBaseTheme.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        @drawable/ic_arrow_back_white_24dp
        @drawable/ic_menu_white_24dp
        @drawable/ic_library_books_white_24dp
        @drawable/ic_md_jet_white_24dp
        @drawable/ic_warning_white_24dp
        @drawable/ic_link_white_24dp
        @drawable/ic_map_white_24dp
        @drawable/ic_star_white_24dp
        @drawable/ic_email_white_24dp
        @drawable/ic_action_important_dark
        @drawable/ic_action_map_dark
        @drawable/ic_action_search_dark
        @drawable/ic_action_warning_dark
        @drawable/ic_action_web_site_dark
        @drawable/ic_calculator_dark
        @drawable/ic_save_white_24dp
        @drawable/ic_delete_forever_white_24dp
        @drawable/arrow_right
        @color/highlight_dark
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="ic_arrow_back">@drawable/ic_arrow_back_black_24dp</item>
        <item name="ic_menu">@drawable/ic_menu_black_24dp</item>
        <item name="ic_library_books">@drawable/ic_library_books_black_24dp</item>
        <item name="ic_md_jet">@drawable/ic_md_jet_black_24dp</item>
        <item name="ic_warning">@drawable/ic_warning_black_24dp</item>
        <item name="ic_link">@drawable/ic_link_black_24dp</item>
        <item name="ic_map">@drawable/ic_map_black_24dp</item>
        <item name="ic_star">@drawable/ic_star_black_24dp</item>
        <item name="ic_email">@drawable/ic_email_black_24dp</item>
        <item name="ic_search">@drawable/ic_search_black_24dp</item>
        <item name="ic_md_calculator">@drawable/ic_md_calculator_black_24dp</item>
        <item name="ic_save">@drawable/ic_save_black_24dp</item>
        <item name="ic_delete">@drawable/ic_delete_forever_black_24dp</item>
        <item name="arrow_right">@drawable/ic_keyboard_arrow_right_black_24dp</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="highlight">@color/highlight_light</item>
        <item name="android:spotShadowAlpha">0.5</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppTheme.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="ic_arrow_back">@drawable/ic_arrow_back_white_24dp</item>
        <item name="ic_menu">@drawable/ic_menu_white_24dp</item>
        <item name="ic_library_books">@drawable/ic_library_books_white_24dp</item>
        <item name="ic_md_jet">@drawable/ic_md_jet_white_24dp</item>
        <item name="ic_warning">@drawable/ic_warning_white_24dp</item>
        <item name="ic_link">@drawable/ic_link_white_24dp</item>
        <item name="ic_map">@drawable/ic_map_white_24dp</item>
        <item name="ic_star">@drawable/ic_star_white_24dp</item>
        <item name="ic_email">@drawable/ic_email_white_24dp</item>
        <item name="ic_search">@drawable/ic_search_white_24dp</item>
        <item name="ic_md_calculator">@drawable/ic_md_calculator_white_24dp</item>
        <item name="ic_save">@drawable/ic_save_white_24dp</item>
        <item name="ic_delete">@drawable/ic_delete_forever_white_24dp</item>
        <item name="arrow_right">@drawable/ic_keyboard_arrow_right_white_24dp</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="highlight">@color/highlight_dark</item>
        <item name="android:spotShadowAlpha">0.5</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>