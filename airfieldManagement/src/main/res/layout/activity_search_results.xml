<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/revlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="8dp" >

	<ListView
	    android:id="@android:id/list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	    
	</ListView>
	
	<TextView
	    android:id="@+id/txtQuery"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" />
	
	<TextView
	    android:id="@+id/txtQuery2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/txtQuery" />
	
	<TextView
	    android:id="@+id/txtQuery3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/txtQuery2" />
	
	<TextView
	    android:id="@+id/txtQuery4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/txtQuery3"/>
	
	<!-- <TextView
	   android:id="@+id/txtQuery5"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_below="@+id/txtQuery4" /> -->
	
	<TextView
	    android:id="@+id/txtQuery6"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/txtQuery4" />
	
	<TextView
	    android:id="@+id/txtQuery7"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/txtQuery6" />
	
	<TextView
	    android:id="@+id/txtQuery8"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/txtQuery7"/>
	    
	</RelativeLayout>

