<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:searchViewStyle"> @drawable/ic_action_search </item>
        <item name="airplane"> @drawable/ic_action_airplane_mode_on</item>
        <item name="email"> @drawable/ic_action_email</item>
        <item name="important"> @drawable/ic_action_important</item>
        <item name="map"> @drawable/ic_action_map</item>
        <item name="paste"> @drawable/ic_action_paste</item>
        <item name="search"> @drawable/ic_action_search</item>
        <item name="warning"> @drawable/ic_action_warning</item>
        <item name="web"> @drawable/ic_action_web_site</item>
        <item name="calc"> @drawable/ic_calculator</item>
        <item name="android:imageButtonStyle">?android:borderlessButtonStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- API 11 theme customizations can go here. -->
    </style>
    
    <style name="AppBaseTheme.Dark" parent="@style/Theme.AppCompat">
        <item name="android:searchViewStyle"> @drawable/ic_action_search_dark </item>
        <item name="airplane"> @drawable/ic_action_airplane_mode_on_dark</item>
        <item name="email"> @drawable/ic_action_email_dark</item>
        <item name="important"> @drawable/ic_action_important_dark</item>
        <item name="map"> @drawable/ic_action_map_dark</item>
        <item name="paste"> @drawable/ic_action_paste_dark</item>
        <item name="search"> @drawable/ic_action_search_dark</item>
        <item name="warning"> @drawable/ic_action_warning_dark</item>
        <item name="web"> @drawable/ic_action_web_site_dark</item>
        <item name="calc"> @drawable/ic_calculator_dark</item>
        <item name="android:imageButtonStyle">?android:borderlessButtonStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- API 11 theme customizations can go here. -->
    </style>

</resources>