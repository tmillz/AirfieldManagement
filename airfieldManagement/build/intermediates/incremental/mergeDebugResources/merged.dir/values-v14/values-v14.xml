<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="ic_drawer"> @drawable/ic_drawer</item>
        <item name="airplane"> @drawable/ic_action_airplane_mode_on</item>
        <item name="email"> @drawable/ic_action_email</item>
        <item name="important"> @drawable/ic_action_important</item>
        <item name="map"> @drawable/ic_action_map</item>
        <item name="paste"> @drawable/ic_action_paste</item>
        <item name="search"> @drawable/ic_action_search</item>
        <item name="warning"> @drawable/ic_action_warning</item>
        <item name="web"> @drawable/ic_action_web_site</item>
        <item name="calc"> @drawable/ic_calculator</item>
        <item name="save"> @drawable/ic_save_black_24dp</item>
        <item name="delete"> @drawable/ic_delete_forever_black_24dp</item>
        <item name="highlight">@color/highlight_light</item>
        <!-- API 14 theme customizations can go here. -->
    </style>
    <style name="AppBaseTheme.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="ic_drawer"> @drawable/ic_drawer_white</item>
        <item name="airplane"> @drawable/ic_action_airplane_mode_on_dark</item>
        <item name="email"> @drawable/ic_action_email_dark</item>
        <item name="important"> @drawable/ic_action_important_dark</item>
        <item name="map"> @drawable/ic_action_map_dark</item>
        <item name="paste"> @drawable/ic_action_paste_dark</item>
        <item name="search"> @drawable/ic_action_search_dark</item>
        <item name="warning"> @drawable/ic_action_warning_dark</item>
        <item name="web"> @drawable/ic_action_web_site_dark</item>
        <item name="calc"> @drawable/ic_calculator_dark</item>
        <item name="save"> @drawable/ic_save_white_24dp</item>
        <item name="delete"> @drawable/ic_delete_forever_white_24dp</item>
        <item name="highlight">@color/highlight_dark</item>
        <!-- API 14 theme customizations can go here. -->
    </style>
    <style name="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="Platform.AppCompat" parent="Platform.V14.AppCompat"/>
    <style name="Platform.AppCompat.Light" parent="Platform.V14.AppCompat.Light"/>
    <style name="Platform.V14.AppCompat" parent="Platform.V11.AppCompat">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>

        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
    <style name="Platform.V14.AppCompat.Light" parent="Platform.V11.AppCompat.Light">
        <item name="android:actionModeSelectAllDrawable">?actionModeSelectAllDrawable</item>

        <item name="android:listPreferredItemPaddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:listPreferredItemPaddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
    </style>
    <style name="TextAppearance.AppCompat.Notification" parent="@android:style/TextAppearance.StatusBar.EventContent"/>
    <style name="TextAppearance.AppCompat.Notification.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title"/>
    <style name="TextAppearance.StatusBar.EventContent" parent="@android:style/TextAppearance.StatusBar.EventContent"/>
    <style name="TextAppearance.StatusBar.EventContent.Info"/>
    <style name="TextAppearance.StatusBar.EventContent.Line2">
        <item name="android:textSize">@dimen/notification_subtext_size</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Time"/>
    <style name="TextAppearance.StatusBar.EventContent.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title"/>
</resources>